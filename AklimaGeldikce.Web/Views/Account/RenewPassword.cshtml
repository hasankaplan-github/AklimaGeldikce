
@{
    ViewData["Title"] = "RenewPassword";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!-- /.login-logo -->
<div class="login-box-body">
    @if (ViewBag.IdIsInvalid == true)
    {
        <p class="login-box-msg">Kullanmmış olduğunuz link geçersiz. Lütfen geçerli bir link kullanın.</p>
    }
    else if (ViewBag.IsUsed == true)
    {
        <p class="login-box-msg">Kullanmmış olduğunuz link daha önce kullanılmış.</p>
    }
    else if (ViewBag.IsExpired == true)
    {
        <p class="login-box-msg">Kullanmmış olduğunuz linkin kullanım süresi dolmuşturs.</p>
    }
    else if (ViewBag.OperationIsSucceeded == true)
    {
        <p class="login-box-msg">Şifreniz başarıyla yenilenmiştir. <a asp-action="Login">Giriş</a> sayfasından yeni şifrenizle giriş yapabilirsiniz.</p>
    }
    else
    {
        <p class="login-box-msg">Şifremi yenile</p>
        if (ViewBag.PasswordsAreNotEqual == true)
        {
            <p class="login-box-msg">Girdiğiniz şifreler eşit değil. Lütfen aynı şifreleri giriniz.</p>
        }
        <form asp-action="RenewPassword">
            <input type="hidden" name="Id" value="@ViewBag.Id" />
            <div class="form-group has-feedback">
                <input name="Password" type="password" class="form-control" placeholder="Şifreniz">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input name="PasswordAgain" type="password" class="form-control" placeholder="Şifreniz Tekrar">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>

            <div class="row">
                <div class="col-xs-6">
                    <button id="RenewPasswordButton" type="submit" class="btn btn-primary btn-block btn-flat">Şifremi Yenile</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

